{% extends 'base.html.twig' %}

{% block title %}Certificate index{% endblock %}

{% block body %}
    <h1>Liste des personnes test√©es </h1>

    <div class="row mx-2" id="cert_table">
        <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Surname</th>
                <th>Name</th>
                <th>BirthDate</th>
                <th>Result</th>
                <th>SampleDate</th>
                <th>TestNumber</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for certificate in certificates %}
            <tr>
                <td>{{ certificate.id }}</td>
                <td>{{ certificate.Surname }}</td>
                <td>{{ certificate.name }}</td>
                <td>{{ certificate.birthDate ? certificate.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ certificate.result ? 'Yes' : 'No' }}</td>
                <td>{{ certificate.sampleDate ? certificate.sampleDate|date('Y-m-d') : '' }}</td>
                <td>{{ certificate.testNumber }}</td>
                <td>
                    <a href="{{ path('certificate_show', {'id': certificate.id}) }}">show</a>
                    <a href="{{ path('certificate_edit', {'id': certificate.id}) }}">edit</a>
                    {{ include('certificate/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('certificate_new') }}">Create new</a>
{% endblock %}
